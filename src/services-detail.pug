extends layout/main/main
block title
  | services
block main
  //- include includes/preloader/preloader
  .wrapper
    .content
      include includes/header/header

      .services
        .services__banner(style="background-image: url('./assets/img/services.jpg')")
          .container
            include includes/breadcrumbs/breadcrumbs
            +breadcrumbs(['главная'], 'продажа оборудования')
            
            h2.title.fade-title  продажа оборудования
        mixin services(image, title, desc, modificator)  
          .services__detail
            .services__block
              .services__wrap(class=modificator)
                .services__item.curtain                 
                  .services__img
                    img(src=image, alt="")
                .services__item
                  .services__desc
                    h2.title.fade-title=title
                    .subtitle
                      p=desc
              .line
                span
                span
        +services('./assets/img/ser1.png','продажа оборудования','Давно выяснено, что при оценке дизайна и композиции читаемый текст мешает сосредоточиться. Lorem Ipsum используют потому, что тот обеспечивает более или менее стандартное заполнение шаблона.')
        


  include includes/scripts 
 
    